<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.itheima.domain.Project">
		<id name="pid" length="6">
			<generator class="native"></generator>
		</id>
<!-- 		一定要指定长度，在创建表的时候优化表所占的内存，减少查询时间 -->
		<property name="name" length="100"></property>
		<property name="No" length="20"></property>
		<property name="members" length="30"></property>
		<property name="start" type="date"></property>
		<property name="year" length="5"></property>
		<property name="statue" length="1"></property>
		<property name="type" length="1"></property>
	</class>
</hibernate-mapping>